{
  "name": "todo-app",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "json-server --watch db.json --static ./public",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "json-server": "^0.17.4",
    "whatwg-fetch": "^3.6.20"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["./jest.setup.js"],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/public/js/$1"
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  }
}
